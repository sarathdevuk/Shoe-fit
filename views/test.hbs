  console.log({{monthlyData}})
  console.log({{monthlyReturn}})
  console.log({{categoryCount}})
  var userCount={{userCount}}
  let categoryName=[]
  {{#each categoryName}}
  categoryName.push('{{this}}')
  {{/each}}
  console.log({{weeklyData}})
  console.log(categoryName)
  let online={{online}}
  let cod={{cod}}
        var options = {
          series: [{
          name: 'Revenue',
          data: [{{monthlyData}}]
        }, ],
          chart: {
          type: 'bar',
          height: 350
        },
        plotOptions: {
          bar: {
            horizontal: false,
            columnWidth: '55%',
            endingShape: 'rounded'
          },
        },
        dataLabels: {
          enabled: false
        },
        stroke: {
          show: true,
          width: 2,
