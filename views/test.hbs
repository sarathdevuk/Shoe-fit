          }
        }]
        };
        var piechart = new ApexCharts(document.querySelector("#piechart"), options);
        piechart.render();
         var options = {
          series: [{{categoryCount}}],
          chart: {
          width: 400,
          type: 'donut',
          dropShadow: {
            enabled: true,
