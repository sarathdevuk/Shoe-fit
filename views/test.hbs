              width: 200
            },
            legend: {
              position: 'bottom'
            }
          }
        }]
        };
		var doughnotchart = new ApexCharts(document.querySelector("#donut"), options);
        doughnotchart.render();  
         var options = {
          series: [{
          name: 'REVENUE',
          data: [{{weeklyData}}]
        }],
          chart: {
          height: 350,
