<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
      <script src="https://unpkg.com/js-image-zoom@0.7.0/js-image-zoom.js" type="application/javascript"></script>
</head>
<body>
  

<div class="product-main">
  <div class="container">

    <div class="row">
      <div class="col-12 col-md-6">
        <div class="car-container">
          <div id="carouselExampleIndicators" class="carousel slide w-100">
            <div class="carousel-inner">
              <div class="carousel-item active">



                <div id="img-container" style="width:500px" class="easyzoom">
                  
                    <img src="/uploads/image-1676287460622-126203287" alt="" />
                
                </div>



               
                <img src="/uploads/image-1677246099784-752570280" class="d-flex w-50" alt="..." />
             
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-6">
        <div class="product-container">
          <div class="product-head mt-5">

            <h3>
            
            </h3>
          </div>
          <div class="product-price mt-3">
            <h3 class="me-2">₹ <%=order.product.price %>
            </h3>
            <strike>₹ <%=order.product.MRP %> </strike>
          </div>
          <h5 class="mt-4">Amount Payable </h5>
          <div class="quantity-box mt-3">
            <b>₹ <%= order.amountPayable %> </b>

          </div>
          <h5 class="mt-4">Address</h5>
          <div class="mt-3 d-flex flex-column">
            <span>
              <%=order.address.name %>
            </span>
            <span>
              <%=order.address.mobile %>
            </span>
            <span>
              <%=order.address.address %>
            </span>
            <span>PIN: <%=order.address.pincode %> </span>
          </div>
          <h5 class="mt-4">Status</h5>
          <div class="status-box mt-3">
            <div class="order-status justify-content-start">
              <div class="<%= order.orderStatus  %> ">
                <%= order.orderStatus %>
              </div>
            </div>
          </div>
          <h5 class="mt-4">Quantity</h5>
          <div class="quantity-box mt-3">
            <span>Quantity: </span>
            <input type="number" value="<%-order.quantity%>" id="quantity" disabled />
          </div>
          <h5 class="mt-4">Payment Status</h5>
          <div class="quantity-box mt-3">
            <%= order.paymentType %>
          </div>
          <h5 class="mt-4">Expected delivery date</h5>
          <div class="quantity-box mt-3">
            <%= order.dispatch.toLocaleString() %>
          </div>
          <% if(order.coupon.applied){ %>
            <h5 class="mt-4">Coupon Applied</h5>
            <div class="quantity-box mt-3">
              Coupon Name : <%= order.coupon.coupon.name %> <br>
                Coupon Code : <%= order.coupon.coupon.code %> <br>
                  Discount : <%= order.coupon.price %>
            </div>
            <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  var options = {
    width:400,
    height:250,
    zoomWidth:500,
    offset:{vertical:0, horizontal:10},
    scale:1.5
  }
  new ImageZoom(document.getElementById("img-container"),options)
</script>


</body>
</html>



