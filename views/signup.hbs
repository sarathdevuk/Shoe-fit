<body>

  <div class="limiter">
    <div class="container-login100">
      <div class="wrap-login100">
        <div class="login100-pic js-tilt" data-tilt>
          <img src="/images/img-01.png" alt="IMG">
        </div>

        <form id="form" class="login100-form validate-form" action="/register" method="post" onsubmit="return submitForm(event)">
          <span class="login100-form-title">
            Create Account
          </span>

          <div class="wrap-input100 validate-input" data-validate="required">
            <input id="name" class="input100" type="text" name="username" placeholder="Full Name" required>
            <span class="focus-input100"></span>
            <span class="symbol-input100">
              <i class="fa fa-envelope" aria-hidden="true"></i>
            </span>
          </div>

          <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
            <input id="email" class="input100" type="text" name="email" placeholder="Email" required>
            <span class="focus-input100"></span>
            <span class="symbol-input100">
              <i class="fa fa-envelope" aria-hidden="true"></i>
            </span>
          </div>

          <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
            <input id="phone" class="input100" type="number" name="phone" placeholder="Phone" required>
            <span class="focus-input100"></span>
            <span class="symbol-input100">
               <i class="fa fa-mobile" aria-hidden="true"></i>
            </span>
          </div>


          <div class="wrap-input100 validate-input" data-validate="Password is required">
            <input id="password" class="input100" type="password" name="password" placeholder="Password" required>
            <span class="focus-input100"></span>
            <span class="symbol-input100">
              <i class="fa fa-lock" aria-hidden="true"></i>
            </span>
          </div>
          <div class="wrap-input100 validate-input" data-validate="Password is required">
            <input id="cfmPassword" class="input100" type="password" name="cfmPassword" placeholder="Confirm Password">
            <span class="focus-input100"></span>
            <span class="symbol-input100">
              <i class="fa fa-lock" aria-hidden="true"></i>
            </span>
          </div>
          <div id="error2"></div>
          {{!-- <p id="error" class="text-center fw-bold" style="color: rgb(190, 0, 0)"> </p> --}}

          <div class="container-login100-form-btn">
            <button class="login100-form-btn" type="submit">
              Create Account
            </button>
          </div>


          <div class="text-center p-t-136">

          </div>
        </form>
      </div>
    </div>
  </div>

  <script>

    const form = document.querySelector("#form");
    const username = form.querySelector("#name");
    const email = form.querySelector("#email");
    const password = form.querySelector("#password");
    const cfmPassword = form.querySelector("#cfmPassword");
    const errorElement = document.querySelector("#error2");

    function hideErrorMessage(){
      errorElement.innerHTML="";
    }

    function showErrorMessage(message){
      console.log(message)

       errorElement.innerHTML = `<p id="error" class="text-center fw-bold" style="color: rgb(190, 0, 0)">${message} </p>`;
        setTimeout(() => {
          errorElement.innerHTML = `<p></p>`;
        }, 5000);
    }

    function submitForm(e) {
       // e.preventDefault()
      console.log("eror")
       
        let usercheck = /^[A-Za-z\.\-]{3,30}$/;
      if (username.value.match(usercheck)) {
        } else {
          showErrorMessage("space is not allowed in name field");
          return false;
        }

        if (username.value === "") {
          showErrorMessage("Name field is empty");
          return false;
        }
        if (username.value.trim() == "") {
          showErrorMessage("Name field is empty");
          return false;
        }
         if (username.value.length >=12) {
          showErrorMessage("Name must be less than 30");
          return false;
        }
          if (email.value === "") {
          showErrorMessage("Email field is empty");
          return false;
        }

        if (email.value.trim() == "") {
          showErrorMessage("Email field is empty");
          return false;
        }
          var validRegex =
          /^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/;
        if (email.value.match(validRegex)) {
        } else {
          showErrorMessage("Email is not correct");
          return false;
        }
         if (password.value === "") {
          showErrorMessage("Password field is empty");
          return false;
        }

        if (password.value.trim() == "") {
          showErrorMessage("Password field is empty");
          return false;
        }

        if (password.value.length >= 15) {
          showErrorMessage("Password must be less than 15 Characters");
          return false;
        }

        if (password.value.length < 6) {
          showErrorMessage("Password must be greater than 6 Characters");
          return false;
        }

        if (password.value == "password") {
          showErrorMessage("Password can not be password");
          return false;
        }
        let numberRegex = /\d/;
        let letterRegex = /[a-zA-Z]/;
        {{!-- let specialCharRegex = /[@#$.!%*?&]/; --}}

        if (!numberRegex.test(password.value)) {
          showErrorMessage("Password must contain at least one number");
          return false;
        }

        if (!letterRegex.test(password.value)) {
          showErrorMessage("Password must contain at least one letter");
          return false;
        }

        {{!-- if (!specialCharRegex.test(password.value)) {
          showErrorMessage(
            "Password must contain at least one special character"
          );
          return false;
        } --}}

        if (password.value.length < 8 || password.value.length > 32) {
          showErrorMessage("Password must be between 8 and 32 characters long");
          return false;
        }

        if (cfmPassword.value === "") {
          showErrorMessage("Confirm Password field is empty");
          return false;
        }

        if (password.value !== cfmPassword.value) {
          showErrorMessage("Passwords are not same");
          return false;
        }

         hideErrorMessage();
        return true;

    }

  </script>



