    <div class="page-wrapper">
      <div class="container">
        <div class=" text-center mt-5 ">

          <h1>Create Coupon</h1>


        </div>


        <div class="row ">
          <div class="col-lg-7 mx-auto">
            <div class="card mt-2 mx-auto p-4 ">
              <div class="card-body ">

                <div class="container">
                  <form id="contact-form" role="form" action="/admin/coupon" method="post">

                    <div class="controls">

                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group">
                            <label for="form_name">Coupon Name</label>
                            <input id="form_name" type="text" name="name" class="form-control" value=""
                              required="required" data-error="Firstname is required.">

                          </div>
                        </div>


                      </div>
                      <div class="row">

                        <div class="col-md-12">
                          <div class="form-group">
                            <label for="form_price">Discount (in percentage)</label>
                            <input id="form_number" type="number" name="discount" max="100" class="form-control" value=""
                              required="required" data-error="price require.">

                          </div>
                        </div>

                      </div>
                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group">
                            <label for="form_name">Coupon Name</label>
                            {{#if error}}
                            <p class="text-center fw-bold" style="color: rgb(190, 0, 0)">{{message}}</p>
                            {{/if}}
                            <input id="date" type="date" name="expiry" class="form-control" value="" required="required"
                              data-error="Firstname is required.">

                          </div>
                        </div>

                        <div class="row">

                          <div class="col-md-12 text-center">
                            <button type="submit" class="btn btn-success mt-5"> Add Product</button>
                          </div>

                        </div>

                      </div>
                  </form>
                </div>
              </div>


            </div>
            <!-- /.8 -->

