  <div class="page-wrapper">
      <div class="container">
        <div class=" text-center mt-5 ">

          <h1>Add Banner</h1>


        </div>


        <div class="row ">
          <div class="col-lg-7 mx-auto">
            <div class="card mt-2 mx-auto p-4 ">
              <div class="card-body ">

                <div class="container">
                  <form id="contact-form" role="form" action="/admin/offer" method="post" enctype="multipart/form-data">
                  
                    <div class="controls">

                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group">
                            <label for="form_name">Offer Name</label>
                            <input id="form_name" type="text" name="name" class="form-control" value=""
                              required="required" data-error="Firstname is required.">

                          </div>
                        </div>
                 

                      </div>
                      
                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group">
                            <label for="form_message">Description</label>
                            <textarea id="form_message" name="description" class="form-control"
                              rows="4" required="required" value=""
                              data-error="Please, leave us a message."></textarea>
                          </div>

                        </div>

                        <div class="row">
                         
                          <div class="mb-6 mt-4">
                            <label for="main image">Main image</label>
                            <input name="image"  class="form-control" type="file"  id="formFile" required >
                          </div>
                                                 
                        </div>

                        <div class="col-md-12 text-center">


                          <button type="submit" class="btn btn-success mt-5"> Add Banner</button>

                        </div>

                      </div>


                    </div>
                  </form>
                </div>
              </div>


            </div>
