<div class="page-wrapper"> 
      <div class="container">
        <div class=" text-center mt-5 ">

          <h1>Change order status</h1>


        </div>


        <div class="row ">
          <div class="col-lg-7 mx-auto">
            <div class="card mt-2 mx-auto p-4 ">
              <div class="card-body ">

                <div class="container">
                  <form id="contact-form" role="form" action="/admin/order/{{order._id}}" method="post">



                    <div class="controls">

                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group">
                            <label class="text-dark" for="form_name">Ordered BY</label>
                            {{#if error}}
                            <p class="text-center fw-bold" style="color: rgb(190, 0, 0)">{{message}}</p>
                            {{/if}}
                            <input id="form_name" type="text" name="name" class="form-control" value="{{order.orderby.username}}"
                              required="required" data-error="Firstname is required." disabled>

                          </div>
                        </div>
                        <div class="col-md-12">
                          <div class="form-group">
                            <label class="text-dark" for="form_name">product</label>
                          
                            <input id="form_name" type="text" name="name" class="form-control" value=""
                              required="required" data-error="Firstname is required."  disabled>

                          </div>
                        </div>
                        <div class="col-md-12">
                          <div class="form-group">
                            <label for="form_need">Update status</label>
                            <select id="form_need" name="status" class="form-control" required="required"
                              data-error="Please specify your need.">
                              <option value="" selected disabled>Select Category</option>

                            
                              {{!-- <option>Processing</option>
                              <option>dispatched</option>                         
                              <option>Out for delivery</option>
                              <option>Delivered</option> --}}
                          
                             {{#ifEquals order.orderStatus "Processing"}}  
                             <option>Processing</option>                       
                             <option>dispatched</option>                       
                              <option>Out for delivery</option>
                              <option>Delivered</option>
                              <option class="text-danger fw-bold">Cancelled</option>
                            {{/ifEquals}}
                             {{#ifEquals order.orderStatus "dispatched"}}  
                             <option>dispatched</option>                       
                              <option>Out for delivery</option>
                              <option>Delivered</option>
                              <option class="text-danger fw-bold">Cancelled</option>

                            {{/ifEquals}}
                             {{#ifEquals order.orderStatus "Out for delivery"}}                        
                              <option>Out for delivery</option>
                              <option>Delivered</option>
                              <option class="text-danger fw-bold">Cancelled</option>
                            {{/ifEquals}}
                            </select>

                          </div>
                        </div>
                        <div class="col-md-6">
                        </div>
                      </div>

                      <div class="col-md-12 text-center">
                        <button type="submit" class="btn btn-success mt-5"> Edit Order</button>
                      </div>

                    </div>


                </div>
                </form>
              </div>
            </div>


          </div>
          <!-- /.8 -->

        </div>
        <!-- /.row-->

      </div>
    </div>